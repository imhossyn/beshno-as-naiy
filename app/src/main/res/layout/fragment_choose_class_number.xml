<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ChooseClassNumberFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choosing_class"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/ClassNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layoutDirection="rtl"
            app:layout_constraintTop_toBottomOf="@+id/TitleTxt">

            <RadioButton
                android:id="@+id/level_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="پایه هفتم"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                app:buttonTint="@color/main" />

            <RadioButton
                android:id="@+id/level_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="پایه هشتم"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                app:buttonTint="@color/main" />

            <RadioButton
                android:id="@+id/level_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="پایه نهم"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                app:buttonTint="@color/main" />
        </RadioGroup>

        <Button
            android:id="@+id/enter_btn"
            android:layout_width="85dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/buttons"
            android:text="@string/enter" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>